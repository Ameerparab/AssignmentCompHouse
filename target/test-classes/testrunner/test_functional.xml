<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Companies House Functional Test Suite" thread-count="1"
	parallel="tests" verbose="4">

	<listeners>
		<listener
			class-name="com.companieshouseAssig.utilities.ExtentReportListener" />
	</listeners> 

	<test name="Home Page Test_chrome">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.companieshouseAssig.tests.HomePageTest" />
		</classes>
	</test>

	<test name="Login Test_chrome">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.companieshouseAssig.tests.LoginTest" />
		</classes>
	</test>

	<test name="Book Room Test_chrome">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.companieshouseAssig.tests.BookRoomTest" />
