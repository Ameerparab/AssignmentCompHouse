	</test>

	<test name="Conact Details Send Test_chrome">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.companieshouseAssig.tests.ConactDetailsSendTest" />
		</classes>
	</test>
	
		<test name="Checking links Pages Test_chrome">
		<parameter name="browser" value="chrome" />
