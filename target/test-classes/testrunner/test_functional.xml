	</test>
	
		<test name="Performance Login time Test_chrome">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.companieshouseAssig.tests.NFTPerformanceLoginTest" />
		</classes>
	</test>

	<test name="Responsivness Login test Test_chrome">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.companieshouseAssig.tests.NFTResponsivenessLoginTest" />
		</classes>
	</test>
	


</suite>